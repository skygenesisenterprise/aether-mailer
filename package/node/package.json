{
  "name": "@aether-mailer/node",
  "version": "1.0.7",
  "description": "Official NodeJS SDK for Aether Mailer - Unified email sending and domain management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "email",
    "mailer",
    "smtp",
    "aether-mailer",
    "nodejs",
    "typescript",
    "sdk",
    "api",
    "domain",
    "newsletter"
  ],
  "author": "Sky Genesis Enterprise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skygenesisenterprise/aether-mailer.git",
    "directory": "package/node"
  },
  "homepage": "https://wiki.skygenesisenterprise.com",
  "bugs": {
    "url": "https://github.com/skygenesisenterprise/aether-mailer/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "jose": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "globals": "^16.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ]
  }
}
